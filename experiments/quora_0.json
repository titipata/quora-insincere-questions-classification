{
    "dataset_reader": {
      "type": "quora_classifier", 
      "lazy": true
    },
    "train_data_path": "data/training_0.csv",
    "validation_data_path": "data/validation_0.csv",
    "model": {
      "type": "discourse_classifier",
      "text_field_embedder": {
        "tokens": {
          "type": "embedding",
          "pretrained_file": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.840B.300d.txt.gz",
          "embedding_dim": 300,
          "trainable": false
        }
      },
      "question_encoder": {
        "type": "lstm",
        "bidirectional": true,
        "input_size": 300,
        "hidden_size": 300,
        "num_layers": 1,
        "dropout": 0.2
      },
      "classifier_feedforward": {
        "input_dim": 600,
        "num_layers": 2,
        "hidden_dims": [300, 5],
        "activations": ["relu", "linear"],
        "dropout": [0.2, 0.0]
      }
    },
    "iterator": {
      "type": "bucket",
      "sorting_keys": [["question_text", "num_tokens"]],
      "batch_size": 64
    },
    "trainer": {
      "num_epochs": 50,
      "patience": 10,
      "cuda_device": 0,
      "grad_clipping": 5.0,
      "validation_metric": "+accuracy",
      "optimizer": {
        "type": "adam"
      }
    }
  }